      description: '',\r\n                price: null,\r\n                categoryId: '', // Ensure this is initialized to an empty string\r\n                image: null,\r\n            },\r\n        };\r\n    },\r\n    methods: {\r\n        handleImageUpload(event) {\r\n            const file = event.target.files[0];\r\n            this.newProduct.image = file;\r\n        },\r\n        submitProduct() {\r\n            const formData = new FormData();\r\n            formData.append('name', this.newProduct.name);\r\n            formData.append('description', this.newProduct.description);\r\n            formData.append('price', this.newProduct.price);\r\n            formData.append('category', this.newProduct.categoryId); // Submit the selected category's ID\r\n            formData.append('image', this.newProduct.image);\r\n\r\n            this.$emit('add-product', formData);\r\n            this.$emit('close');\r\n        },\r\n        closeModal() {\r\n            this.$emit('close');\r\n        },\r\n    },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n/* Modal background */\r\n.modal {\r\n    display: block;\r\n    position: fixed;\r\n    z-index: 1000;\r\n    left: 0;\r\n    top: 0;\r\n    width: 100%;\r\n    height: 100%;\r\n    background-color: rgba(0, 0, 0, 0.5);\r\n}\r\n\r\n/* Modal content */\r\n.modal-content {\r\n    position: relative;\r\n    margin: 10% auto;\r\n    padding: 20px;\r\n    width: 40%;\r\n    background-color: #fff;\r\n    border-radius: 10px;\r\n    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);\r\n}\r\n\r\n/* Close button */\r\n.close {\r\n    position: absolute;\r\n    top: 10px;\r\n    right: 15px;\r\n    font-size: 24px;\r\n    cursor: pointer;\r\n}\r\n\r\n/* Form styling */\r\n.form-group {\r\n    margin-bottom: 15px;\r\n}\r\n\r\nlabel {\r\n    display: block;\r\n    margin-bottom: 5px;\r\n    font-weight: bold;\r\n    color: #333;\r\n}\r\n\r\ninput,\r\nselect,\r\ntextarea {\r\n    width: 100%;\r\n    padding: 8px;\r\n    margin-top: 5px;\r\n    border: 1px solid #ccc;\r\n    border-radius: 5px;\r\n    font-size: 16px;\r\n}\r\n\r\n/* Buttons styling */\r\n.add-button {\r\n    background-color: #3498db;\r\n    color: white;\r\n    padding: 10px 20px;\r\n    border: none;\r\n    border-radius: 5px;\r\n    cursor: pointer;\r\n}\r\n\r\n.cancel-button {\r\n    background-color: #e74c3c;\r\n    color: white;\r\n    padding: 10px 20px;\r\n    border: none;\r\n    border-radius: 5px;\r\n    cursor: pointer;\r\n    margin-left: 10px;\r\n}\r\n\r\n.add-button:hover {\r\n    background-color: #2980b9;\r\n}\r\n\r\n.cancel-button:hover {\r\n    background-color: #c0392b;\r\n}\r\n</style>\r\n"],"mappings":"AAgDA,eAAe;EACXA,KAAK,EAAE;IACHC,SAAS,EAAE;MACPC,IAAI,EAAEC,OAAO;MACbC,QAAQ,EAAE;IACd,CAAC;IACDC,UAAU,EAAE;MACRH,IAAI,EAAEI,KAAK;MACXF,QAAQ,EAAE;IACd;EACJ,CAAC;EACDG,IAAIA,CAAA,EAAG;IACH,OAAO;MACHC,UAAU,EAAE;QACRC,IAAI,EAAE,EAAE;QACRC,WAAW,EAAE,EAAE;QACfC,KAAK,EAAE,IAAI;QACXC,UAAU,EAAE,EAAE;QAAE;QAChBC,KAAK,EAAE;MACX;IACJ,CAAC;EACL,CAAC;EACDC,OAAO,EAAE;IACLC,iBAAiBA,CAACC,KAAK,EAAE;MACrB,MAAMC,IAAG,GAAID,KAAK,CAACE,MAAM,CAACC,KAAK,CAAC,CAAC,CAAC;MAClC,IAAI,CAACX,UAAU,CAACK,KAAI,GAAII,IAAI;IAChC,CAAC;IACDG,aAAaA,CAAA,EAAG;MACZ,MAAMC,QAAO,GAAI,IAAIC,QAAQ,CAAC,CAAC;MAC/BD,QAAQ,CAACE,MAAM,CAAC,MAAM,EAAE,IAAI,CAACf,UAAU,CAACC,IAAI,CAAC;MAC7CY,QAAQ,CAACE,MAAM,CAAC,aAAa,EAAE,IAAI,CAACf,UAAU,CAACE,WAAW,CAAC;MAC3DW,QAAQ,CAACE,MAAM,CAAC,OAAO,EAAE,IAAI,CAACf,UAAU,CAACG,KAAK,CAAC;MAC/CU,QAAQ,CAACE,MAAM,CAAC,UAAU,EAAE,IAAI,CAACf,UAAU,CAACI,UAAU,CAAC,EAAE;MACzDS,QAAQ,CAACE,MAAM,CAAC,OAAO,EAAE,IAAI,CAACf,UAAU,CAACK,KAAK,CAAC;MAE/C,IAAI,CAACW,KAAK,CAAC,aAAa,EAAEH,QAAQ,CAAC;MACnC,IAAI,CAACG,KAAK,CAAC,OAAO,CAAC;IACvB,CAAC;IACDC,UAAUA,CAAA,EAAG;MACT,IAAI,CAACD,KAAK,CAAC,OAAO,CAAC;IACvB;EACJ;AACJ,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}